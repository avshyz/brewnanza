{
  "name": "brewnanza",
  "private": true,
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "dev": "bunx convex dev & turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "scrape": "bun run scrape:no-embed && bun run scrape:only-embed",
    "scrape:no-embed": "bun run --filter @brewnanza/scraper scrape",
    "scrape:only-embed": "cd packages/embedder && uv run python notes.py --openai",
    "scrape:test": "bun run --filter @brewnanza/scraper scrape:test",
    "scrape:list": "bun run --filter @brewnanza/scraper scrape:list",
    "embed:vocab": "cd packages/embedder && uv run python vocabulary.py",
    "shipping:check": "bun run --filter @brewnanza/scraper shipping:check"
  },
  "devDependencies": {
    "convex": "^1.17.4",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  },
  "packageManager": "bun@1.1.42",
  "dependencies": {
    "fuse.js": "^7.1.0"
  }
}
