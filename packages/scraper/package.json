    "zod": "^3.24.1"
  },
  "optionalDependencies": {
    "playwright": "^1.57.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/sanitize-html": "^2.16.0",
    "domhandler": "^5.0.3",
    "typescript": "^5.7.3"
