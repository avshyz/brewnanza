{
  "name": "@brewnanza/scraper",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "scrape": "bun run src/cli.ts",
    "scrape:test": "bun run src/compare-extraction.ts",
    "scrape:list": "bun run src/cli.ts --list",
    "scrape:push": "bun run src/cli.ts --push",
    "cache:clear": "rm -rf cache"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "cheerio": "^1.0.0",
    "fuzzysort": "^3.1.0",
    "openai": "^6.16.0",
    "sanitize-html": "^2.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/sanitize-html": "^2.16.0",
    "typescript": "^5.7.3"
  }
}
